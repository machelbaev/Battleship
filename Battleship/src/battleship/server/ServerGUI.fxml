<AnchorPane prefHeight="300.0" prefWidth="513.0" style="-fx-background-color: afcbcc;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="battleship.server.ServerGUIController">
   <children>
