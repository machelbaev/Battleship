            <Font name="SF Pro Text Regular" size="26.0" />
         </font>
      </Label>
      <Button fx:id="startButton" layoutX="39.0" layoutY="199.0" mnemonicParsing="false" onAction="#runServer" prefHeight="39.0" prefWidth="219.0" style="-fx-background-color: #7ab8c5; -fx-background-radius: 5;" text="START">
