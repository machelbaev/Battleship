            <Font name="SF Pro Text Regular" size="17.0" />
         </font>
      </Button>
      <Button fx:id="stopButton" layoutX="267.0" layoutY="199.0" mnemonicParsing="false" onAction="#stopServer" prefHeight="39.0" prefWidth="219.0" style="-fx-background-color: #CE8657 #CE8657; -fx-background-radius: 5;" text="STOP">
         <font>
            <Font name="SF Pro Text Regular" size="17.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
